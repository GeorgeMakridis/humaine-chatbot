# HumAIne-chatbot Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Database Configuration (if using database)
DATABASE_URL=sqlite:///./data/humaine_chatbot.db

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379

# OpenAI Configuration (for LLM integration)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/humaine_chatbot.log

# Model Paths
MODEL_PATH=./models/humaine_chatbot_model.pkl
VIRTUAL_PERSONAS_PATH=./data/virtual_personas/

# RL Configuration
RL_LEARNING_RATE=0.0003
RL_BATCH_SIZE=64
RL_EPOCHS=10

# Personalization Configuration
SENTIMENT_ANALYSIS_ENABLED=True
GRAMMAR_CHECK_ENABLED=True
LANGUAGE_COMPLEXITY_ENABLED=True

# Session Configuration
SESSION_TIMEOUT=300  # 5 minutes in seconds
MAX_SESSION_DURATION=3600  # 1 hour in seconds

# Feedback Configuration
FEEDBACK_ENABLED=True
FEEDBACK_COOLDOWN=30  # seconds between feedback requests

# Analytics Configuration
ANALYTICS_ENABLED=True
ANALYTICS_BATCH_SIZE=100

# Security Configuration
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"] 